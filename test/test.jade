doctype 5
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title Mocha Spec Runner
    // build:css({.tmp,app}) styles/mocha.css
    link(rel="stylesheet", href="styles/chrome.css")
    link(rel="stylesheet", href="bower_components/mocha/mocha.css")
    // endbuild
  body
    #mocha
    // build:js({.tmp,app}) scripts/mocha_chai_sinon.js
    script(src="bower_components/mocha/mocha.js")
    // assertion framework
    script(src="bower_components/chai/chai.js")
    script(src="bower_components/sinon-chai/lib/sinon-chai.js")
    script(src="bower_components/sinonjs/sinon.js")
    // endbuild
    script.
      mocha.setup('bdd');
      var expect = chai.expect;

    // build:js({.tmp,app}) scripts/modules.js
    script(src="bower_components/lodash/dist/lodash.js")
    script(src="bower_components/angular/angular.js")
    script(src="bower_components/underscore.string/lib/underscore.string.js")
    script(src="bower_components/angular-sanitize/angular-sanitize.js")
    script(src="bower_components/angular-ui-router/release/angular-ui-router.js")
    script(src="bower_components/angular-bootstrap/ui-bootstrap-tpls.js")
    script(src="bower_components/eventEmitter/EventEmitter.js")
    script(src="scripts/html-domparser.js")
    // endbuild
    // build:js({.tmp,app}) scripts/angular-mocks.js
    script(src="bower_components/angular-mocks/angular-mocks.js")
    // endbuild
    // build:js({.tmp,app}) scripts/ui-codemirror.js
    script(src="bower_components/codemirror/lib/codemirror.js")
    script(src="bower_components/codemirror/mode/javascript/javascript.js")
    script(src="bower_components/angular-ui-codemirror/ui-codemirror.js")
    // endbuild

    script(src="test/mock.js")

    script(src="scripts/utils.js")
    script(src="scripts/robot.js")

    // build:js({.tmp,app}) scripts/app.js
    script(src="scripts/app.js")
    script(src="scripts/route.js")
    // endbuild

    script(src="scripts/services.js")
    script(src="scripts/controllers.js")

    script(src="test/spec.js")

    script.
      mocha.run()
