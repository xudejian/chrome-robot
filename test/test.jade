    script(src="bower_components/angular-bootstrap/ui-bootstrap-tpls.js")
    script(src="scripts/html-domparser.js")
    // endbuild
    // build:js({.tmp,app}) scripts/angular-mocks.js
    script(src="bower_components/angular-mocks/angular-mocks.js")
    // endbuild

    script(src="scripts/utils.js")
    script(src="scripts/robot.js")

    // build:js({.tmp,app}) scripts/app.js
    script(src="scripts/app.js")
    script(src="scripts/route.js")
    // endbuild

    // build:js({.tmp,app}) scripts/services.js
    script(src="scripts/services/config.js")
    script(src="scripts/services/site.js")
    // endbuild

    // build:js({.tmp,app}) scripts/controllers.js
    script(src="scripts/controllers/main.js")
    script(src="scripts/controllers/header.js")
    script(src="scripts/controllers/site.js")
    script(src="scripts/controllers/work.js")
    // endbuild

    script(src="test/mock/chrome.js")
    script(src="test/spec/robot.js")
    script(src="test/spec/utils.js")
    script(src="test/spec/services/config.js")

    script(src="test/run.js")
