doctype 5
html(ng-app="chromeRobotApp", ng-csp="")
  head
    meta(charset="utf-8")
    title {{title}}
    meta(name="viewport", content="width=device-width")
    link(href="styles/main.css", rel="stylesheet")
  body
    header.header.navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.brand(href="#") Chrome Robot
          ul.nav
            li.divider-vertical
            li
              a(href="#")
                i.icon-home
                |  Home
            li.divider-vertical
            li
              a(href="#/options")
                i.icon-wrench
                |  Options
            li.divider-vertical
            li
              a(href="#/works")
                i.icon-tasks
                |  Works
            li.divider-vertical
    .container
      .row(ng-view="")
    footer.footer
      hr
      .container
